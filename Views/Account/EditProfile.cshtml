@model PizzeriaOnline.Models.User

<div class="row justify-content-center mg-top20">
        <h1 >@Model.UserName </h1>
</div>
<div class="row w-100">

    <div class="col-3 h-100">
    </div>

    <div class="col-6 mg-top100" id="dane-osobowe">
        <div class="row ">
            <p class="text-uppercase" style="font-size: 20px;"> <b>Imię:  </b> @Model.FirstName</p>
        </div>

        <div class="row ">
            <p class="text-uppercase" style="font-size: 20px;"><b>Nazwisko:  </b> @Model.LastName</p>
        </div>
        <div class="row ">
            <p class="text-uppercase" style="font-size: 20px;"><b>PhoneNumber:  </b> @Model.PhoneNumber</p>
        </div>
        <div class="row">
            <p class="text-uppercase" style="font-size: 20px;"><b>Email:  </b>@Model.Email</p>
        </div>
        <div class="row">
            <p class="text-uppercase" style="font-size: 20px;"><b>Address:  </b> @Model.Address</p>
        </div>
        <div class="row " style="margin-top: 50px;">
            <div class="col">
                <button type="button" onclick="ShowDataEdit()" class="btn btn-lg btn-warning">Edytuj profil</button>
            </div>
            <div class="col">
                <button type="button" onclick="" class="btn btn-lg btn-warning">Histoia zamówień</button>
            </div>

        </div>
    </div>

    <div class="col-6 mg-top100" id="edycja-dane-osobowe" style="display:none;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control"  placeholder="@Model.LastName"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="@Model.PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="@Model.Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zmień" class="btn btn-warning" />
                <button type="button" onclick="ShowDataEdit()" class="btn btn-warning">Anuluj</button>
            </div>
        </form>

    </div>

    <div class="col-3 h-100">
    </div>
</div>







