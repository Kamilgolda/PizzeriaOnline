@using Microsoft.AspNetCore.Identity
@using PizzeriaOnline.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" href="@Url.Action("EditProfile", "Account")">Mój profil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Logout", "Account")">Wyloguj</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" href="@Url.Action("Register", "Account")">Zarejestruj się</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" href="@Url.Action("Login", "Account")">Zaloguj</a>
    </li>
}
</ul>
