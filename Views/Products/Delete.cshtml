@model PizzeriaOnline.Models.Product

@{
    ViewData["Title"] = "Usuń Produkt";
}

<div class="d-flex flex-column justify-content-center">
        <h1 class="p-2 align-self-center">Czy na pewno chcesz usunąć produkt <strong>@Html.DisplayFor(model => model.Title)</strong>?</h1>
        <form asp-action="Delete" class="p-5 align-self-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Usuń" class="btn btn-danger btn-lg" />
            <a class="btn btn-info btn-lg" asp-action="Index">Anuluj</a>
        </form>
</div>
 
    
